#cloud-config

coreos:
  etcd:
      discovery: http://%ETCD_DISCVERY%:4001/v2/keys/cluster
      addr: $public_ipv4:4001
      peer-addr: $public_ipv4:7001

  units:
    - name: etcd.service
      command: start

    - name: fleet.service
      command: start
      runtime: no
      content: |
        [Unit]
        Description=fleet

        [Service]
        Environment=FLEET_PUBLIC_IP=$public_ipv4
        ExecStart=/usr/bin/fleet
